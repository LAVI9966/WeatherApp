<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WeatherApp</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200&display=swap" rel="stylesheet">
    <link rel="icon" href="./img/favicon.png" style="color: white;" type="image/png">


    <style>
        body{
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            font-weight: 300;
            font-size: larger;
            font-family: 'Montserrat','Courier New', Courier, monospace;
        }
        .footer{
            margin-top: auto;
        }
        .content{
            display: flex;
            flex-direction: row;
            width: 100%;
            margin: auto;
        }
        .incontent{
            margin: auto;
        }
        .imggg{
            display: flex;
        }
        .imgg{
            border-radius: 5px;
        }
        .imgg img{
            height: 500px;
            width: 300px;
            border: 2px solid transparent;
            border-radius: 5px;
        }
        .text p,h1,button{
            margin: 10px 0;
            padding: 5px 5px;
        }
        .text button{
            cursor: pointer;
            outline: 0;
            border: 0;
            border-radius: 5px;
            font-size: 22px;
            font-weight: 300;
            background-color:#019f55;
            color: #fff;
            padding: 10px 18px;
        }
        .slide {
    display: none;
}

.slide:first-child {
    display: block;
}
        @media screen and (max-width:700px) {
            .content{
                flex-direction: column;
            }
            .incontent{
                padding: 30px;
                margin: 10px;
            }
            .imgg{
                margin: auto;
            }
            .incontent button{
                font-size: 16px;
            }
        }

    </style>
</head>
<body>
   {{>nav}}
    <div class="content">
        <div class="incontent text">
            <p>Welcome to Weather app</p>
            <h1>Get The Latest Weather info Of Your <br> City</h1>
            <button onclick="hreffun('/weather')">Check Now</button>
        </div>
        <div class="incontent imaggg">
            <div class="imgg">
                    <div id="slideshow">
                        <img class="slide" src="./img/background.jpg" alt="">
                        <img class="slide" src="./img/pexels-nur-andi-ravsanjani-gusma-1915182.jpg" alt="">
                        <img class="slide" src="./img/pexels-philippe-donn-1114690.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
   {{>footer}}
   <script>
    const hreffun = (url) =>{
        window.location.href=url;
    }
    let i = 0; // Start point
let slides = document.getElementsByClassName("slide");

setInterval(function() {
    slides[i].style.display = "none";
    i++;
    if (i >= slides.length) {i = 0;}
    slides[i].style.display = "block";
}, 3000); // Change image every 3 seconds
   </script>
</body>
</html>